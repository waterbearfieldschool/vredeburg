{%- set lazyImage = "data:image/svg+xml,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%201%201'%20height%3D'500'%20width%3D'960'%20style%3D'background-color%3Argb(203%2C213%2C224)'%2F%3E" -%}
{% for post in paged.posts %}
<div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
    <div class="rounded shadow-md h-full">
       

        <div class="px-6 py-5">
        
        
            <div class="font-semibold text-lg mb-2">
                
                <!--<a class="text-slate-900 text-center hover:text-slate-700" href="{{ post.url | url }}"> -->
                
                <a class="text-2xl text-center font-bold leading-normal text-slate-900 mt-0 mb-3" href = "{{ post.url | url }}"> 
{{ post.data.title }}
 </a> 
            </div>
            
             <a href="{{ post.url | url }}">

            <img class="w-full m-0 rounded-t lazy" src="{{ lazyImage }}" data-src="{% if post.data.thumb %}{{ post.data.thumb | url }}{% else %}{{ '/assets/img/no-image.svg' | url }}{% endif %}" width="960" height="500" alt="This post thumbnail">

        </a>
        
            <!--<p class="text-slate-700 mb-1" title="Published date">{{ post.data.page.date | readableDate }}</p>-->
            <p class="text-slate-800">
                {{ post.data.description }}
            </p>
        </div>
    </div>
</div>



{% endfor %}
